<html>
    <head>
        <meta charset="utf-8" />

        <style>
 .title-page {
     page-break-after: always;
     position: relative;
     height: 58em;
 }

 .logo {
     display: inline-block;
 }

 a {
     color: #14A6DC;
 }

 a.record-title {
     color: black;
     text-decoration: none;
 }

 .print-record-border {
     border-left: dashed 1px #ccc;
     padding-left: 0.5em;
     margin: 0;

     /* Get rid of annoying vertical whitespace */
     margin-top: -8px;
     padding-top: 8px;
 }

 .avoid-break {
     margin-top: 10px;
     break-inside: avoid;
     page-break-inside: avoid;
 }

 .print-record {
     margin-bottom: 1em;
     border-top: solid 1px #dedede;
 }

 .print-record-border.print-record.level-1 { padding-top: 0; margin-top: 1em; }

 .print-record-border.level-1 { margin-left: 1em; }
 .print-record-border.level-2 { margin-left: 1em }
 .print-record-border.level-3 { margin-left: 1em; }
 .print-record-border.level-4 { margin-left: 1em; }
 .print-record-border.level-5 { margin-left: 1em; }
 .print-record-border.level-6 { margin-left: 1em; }
 .print-record-border.level-7 { margin-left: 1em; }
 .print-record-border.level-8 { margin-left: 1em; }
 .print-record-border.level-9 { margin-left: 1em; }
 .print-record-border.level-10 { margin-left: 1em; }

 .print-record h3 {
     margin: 0;
 }

 .print-record h4 {
     margin: 0.25em 0 0.25em 0;
 }

 .print-record p {
     margin: 0;
 }

 .print-record dl {
     margin: 0 0 0.5em 0;
 }

 .italic {
     font-style: italic;
 }

 .inherit {
     font-style: italic;
 }

 .list-container {
     margin-left: 20px;
 }

 .rl-item-display {
     margin-top: 20px;
 }

 <%= render partial: 'request_list/pdf_style' rescue nil %>

 @page {
     @top-center {
         font-size: 80%;
         color: #666;
         content: '<%= t('plugin.request_list.print.title') %>';
     }

     @bottom-center {
         font-size: 80%;
         color: #666;
         content: '- ' counter(page) ' -';
     }
 }


        </style>
    </head>
    <body>

      <div>
        <p>
          <%= t('plugin.request_list.print.header').html_safe %>
        </p>
      </div>

