<% item.each {|r| r.each {|name, value| %>

  <input type="hidden" name="<%= name %>" value="<%= value %>">

<% }} %>

<div>

<table class="table table-striped rl-ha-item-form-table">
<% item.each {|r| %>
  <tr style="height: 30px;">
  </tr>

  <tr class="rl-ha-item-form rl-ha-item-form-readingroom">
    <td><%= t('plugin.request_list.options.date') %></td>
    <td>
      <div class="input-group datepicker rl-datepicker">
        <input class="date-field form-control rl-ha-item-input"
               data-format="mm/dd/yyyy"
               data-date="<%= Date.today.strftime('%m/%d/%Y') %>"
               data-date-start-date="<%= Date.today.strftime('%m/%d/%Y') %>"
               data-autoclose="true"
               data-force-parse="true"
               placeholder="MM/DD/YYYY"
               name="ScheduledDate_<%= r['Request'] %>">
      </div>
    </td>
  </tr>

  <tr class="rl-ha-item-form rl-ha-item-form-readingroom">
    <td><%= t('plugin.request_list.options.notes') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="Notes_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-readingroom">
    <td><%= t('plugin.request_list.options.questions') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="SpecialRequest_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-saved">
    <td><%= t('plugin.request_list.options.notes') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="Notes_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-saved">
    <td><%= t('plugin.request_list.options.questions') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="SpecialRequest_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-photoduplication">
    <td><%= t('plugin.request_list.options.format') %></td>
    <td>
      <select name="Format_<%= r['Request'] %>" class="form-control rl-ha-item-input">
        <option value="">...</option>
        <% handler.list_opts[:format_options].each do |option| %>
          <option value="<%= option %>"><%= option %></option>
        <% end %>
      </select>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-photoduplication">
    <td><%= t('plugin.request_list.options.delivery') %></td>
    <td>
      <select name="ShippingOption_<%= r['Request'] %>" class="form-control rl-ha-item-input">
        <option value="">...</option>
        <% handler.list_opts[:delivery_options].each do |option| %>
          <option value="<%= option %>"><%= option %></option>
        <% end %>
      </select>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-photoduplication">
    <td><%= t('plugin.request_list.options.for_publication') %></td>
    <td>
      <select name="ForPublication_<%= r['Request'] %>" class="form-control rl-ha-item-input">
        <option value="">...</option>
        <option value="Yes"><%= t('plugin.request_list.options.for_publication_yes') %></option>
        <option value="No"><%= t('plugin.request_list.options.for_publication_no') %></option>
      </select>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-photoduplication">
    <td><%= t('plugin.request_list.options.notes') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="Notes_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <tr class="rl-ha-item-form rl-ha-item-form-photoduplication">
    <td><%= t('plugin.request_list.options.photoduplication-instructions') %></td>
    <td>
      <textarea class="form-control rl-ha-item-input" style="resize: none;" name="SpecialRequest_<%= r['Request'] %>" rows="3"></textarea>
    </td>
  <tr>

  <% r.each {|name, value| %>
    <% next if name == 'Request' %>
    <tr>
      <td><%= name.gsub(/_.+$/, '') %></td>
      <td><%= value.html_safe %></td>
    </tr>
  <% } %>
<% } %>
</table>

</div>
