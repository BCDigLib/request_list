<div class="row">
  <div class="col-sm-12">
    <h2><%= t('plugin.request_list.list_title')  %></h2>
  </div>
</div>

<% @mapper.handlers.each do |handler| %>

<div id="rl-handler-<%= handler.id %>">

<%= form_tag handler.url, :target => 'harvard-library-requests' do |f| %>

<div class="row">
  <div>
    <%= render partial: "request_list/#{handler.profile}/form_header", locals: {:form => f, :handler => handler} %>
  </div>
</div>

<div class="row">

  <div class="col-sm-7">
    <a name="main" title="Main Content"></a>
    <div class="row"></div>
    <div class="row search-results">
      <div class="col-sm-12">
        <a name="searchresults" id="searchresults"></a>

        <div class="rl-list">
          <% unhandled_items = handler.each_item_map do |item, map| %>
            <%= render partial: 'request_list/list_item', locals: {:form => f, :item => item, :map => map, :handler => handler, :include_form => true} %>
          <% end %>
        </div>

      </div>
    </div>
    <div class="row"></div>
    <% unless unhandled_items.empty? %>
      <div class="row">
        <h3><%= t('plugin.request_list.unhandled_items_title')  %></h3>
        <div><%= t('plugin.request_list.unhandled_items_message')  %></div>

        <% unhandled_items.each do |item| %>
          <%= render partial: 'request_list/list_item', locals: {:form => f, :item => item, :map => map, :handler => handler, :include_form => false} %>
        <% end %>

      </div>
    <% end %>
  </div>

  <div class="col-sm-5">
    <div>
      <%= render partial: "request_list/#{handler.profile}/form_right", locals: {:form => f, :handler => handler} %>
    </div>
  </div>

</div>

<div class="row">
  <div>
    <%= render partial: "request_list/#{handler.profile}/form_footer", locals: {:form => f, :handler => handler} %>
  </div>
</div>

<script>
    $('#rl-handler-<%= handler.id %>').find('.btn-primary').click(function() {
        request_list.submitButtonClick('<%= handler.id  %>');
    });
</script>

<% end %>

</div>

<% end %>

